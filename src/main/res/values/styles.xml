<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="default16text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="default14text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="bold14text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="darkviolet14text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkviolet</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="bold16text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular14text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="italic16text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="TextHint">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="default_schedule_text">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="default_profile_text">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="title_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ChatNameTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ChatTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginBottom">@dimen/inner_message_margin</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">@dimen/inner_message_margin</item>
    </style>

    <style name="ChatUserNameTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/inner_message_margin</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">@dimen/inner_message_margin</item>
    </style>

</resources>