<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/my_booking_kir_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_person_24dp" />

    <TextView
        android:id="@+id/my_booking_kir_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        style="@style/bold14text"
        app:layout_constraintStart_toEndOf="@id/my_booking_kir_image"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Имя Фамилия" />

    <TextView
        android:id="@+id/my_booking_kir_comment"
        style="@style/default16text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/my_booking_kir_image"
        app:layout_constraintTop_toBottomOf="@id/my_booking_kir_name"
        android:text="Текст комментария" />

</androidx.constraintlayout.widget.ConstraintLayout>